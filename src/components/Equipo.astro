---

<section id="equipo" class="py-20 bg-background-secondary">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-gaming font-bold text-white mb-6">
        Equipo
      </h2>
      <div class="w-24 h-1 bg-gradient-to-r from-primary to-secondary mx-auto"></div>
    </div>

    <!-- Productora -->
    <div class="mb-16">
      <h3 class="text-2xl md:text-3xl font-gaming font-bold text-primary mb-8 text-center">
        Productora
      </h3>
      <div class="bg-background-primary rounded-lg p-8 border border-border text-center">
        <div class="w-20 h-20 bg-primary rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
          </svg>
        </div>
        <h4 class="text-2xl font-gaming font-bold text-white mb-2">{equipo.productora.nombre}</h4>
        <p class="text-text-secondary">{equipo.productora.descripcion}</p>
      </div>
    </div>

    <!-- Equipo Creativo -->
    <div class="mb-16">
      <h3 class="text-2xl md:text-3xl font-gaming font-bold text-secondary mb-8 text-center">
        Equipo Creativo
      </h3>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {equipo.creativo.map((miembro) => (
          <div class="bg-background-primary rounded-lg p-6 border border-border hover:border-primary transition-all duration-300 transform hover:scale-105">
            <div class="text-center">
              <div class="w-16 h-16 bg-secondary rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                </svg>
              </div>
              <h4 class="text-lg font-gaming font-bold text-white mb-1">{miembro.nombre}</h4>
              <div class="text-primary font-bold mb-2">{miembro.rol}</div>
              <p class="text-text-secondary text-sm">{miembro.descripcion}</p>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Equipo Técnico -->
    <div>
      <h3 class="text-2xl md:text-3xl font-gaming font-bold text-primary mb-8 text-center">
        Equipo Técnico
      </h3>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {equipo.tecnico.map((miembro) => (
          <div class="bg-background-primary rounded-lg p-6 border border-border hover:border-secondary transition-all duration-300 transform hover:scale-105">
            <div class="text-center">
              <div class="w-16 h-16 bg-primary rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
                </svg>
              </div>
              <h4 class="text-lg font-gaming font-bold text-white mb-1">{miembro.nombre}</h4>
              <div class="text-secondary font-bold mb-2">{miembro.rol}</div>
              <p class="text-text-secondary text-sm">{miembro.descripcion}</p>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Stats -->
    <div class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="text-center">
        <div class="text-3xl md:text-4xl font-gaming font-bold text-primary mb-2">11</div>
        <div class="text-text-secondary">Profesionales</div>
      </div>
      <div class="text-center">
        <div class="text-3xl md:text-4xl font-gaming font-bold text-secondary mb-2">3</div>
        <div class="text-text-secondary">Áreas de Especialización</div>
      </div>
      <div class="text-center">
        <div class="text-3xl md:text-4xl font-gaming font-bold text-primary mb-2">100%</div>
        <div class="text-text-secondary">Chilenos</div>
      </div>
    </div>
  </div>
</section> 