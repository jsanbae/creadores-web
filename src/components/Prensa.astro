---
const pressReleases = [
  {
    title: "La Webserie 'Creadores' consigue financiamiento del Ministerio de las Culturas para su primera temporada",
    date: "2023",
    excerpt: "El proyecto documental sobre desarrolladores de videojuegos chilenos recibe apoyo del Fondo Audiovisual para su producción.",
    link: "#"
  }
];

const mediaKit = {
  title: "Kit de Medios",
  description: "Recursos para medios de comunicación",
  items: [
    "Notas de prensa descargables",
    "Imágenes de alta resolución",
    "Información de contacto",
    "Logos oficiales",
    "Material promocional"
  ]
};
---

<section id="prensa" class="py-20 bg-background-secondary">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-gaming font-bold text-white mb-6">
        Prensa
      </h2>
      <div class="w-24 h-1 bg-gradient-to-r from-primary to-secondary mx-auto"></div>
    </div>

    <!-- Featured Press Release -->
    <div class="mb-16">
      <h3 class="text-2xl md:text-3xl font-gaming font-bold text-primary mb-8 text-center">
        Comunicados de Prensa
      </h3>
      <div class="bg-background-primary rounded-lg p-8 border border-border">
        <div class="flex items-start space-x-4">
          <div class="w-12 h-12 bg-primary rounded-lg flex items-center justify-center flex-shrink-0">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v8a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2H4zm3 2h6v4H7V6zm8 8H5v-2h10v2z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="flex-1">
            <div class="flex items-center space-x-4 mb-2">
              <span class="text-primary font-bold">{pressReleases[0].date}</span>
              <span class="px-3 py-1 bg-primary text-white text-xs font-bold rounded-full">
                DESTACADO
              </span>
            </div>
            <h4 class="text-xl font-gaming font-bold text-white mb-3">
              {pressReleases[0].title}
            </h4>
            <p class="text-text-secondary mb-4">
              {pressReleases[0].excerpt}
            </p>
            <a
              href={pressReleases[0].link}
              class="inline-flex items-center text-primary hover:text-secondary font-bold transition-colors duration-300"
            >
              <span>Leer más</span>
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Media Kit -->
    <div class="mb-16">
      <h3 class="text-2xl md:text-3xl font-gaming font-bold text-secondary mb-8 text-center">
        Información para Medios
      </h3>
      <div class="grid lg:grid-cols-2 gap-8">
        <div class="bg-background-primary rounded-lg p-8 border border-border">
          <div class="text-center mb-6">
            <div class="w-16 h-16 bg-secondary rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM6.293 6.707a1 1 0 010-1.414l3-3a1 1 0 011.414 0l3 3a1 1 0 01-1.414 1.414L11 5.414V13a1 1 0 11-2 0V5.414L7.707 6.707a1 1 0 01-1.414 0z" clip-rule="evenodd" />
              </svg>
            </div>
            <h4 class="text-xl font-gaming font-bold text-white mb-2">{mediaKit.title}</h4>
            <p class="text-text-secondary">{mediaKit.description}</p>
          </div>
          <ul class="space-y-3">
            {mediaKit.items.map((item) => (
              <li class="flex items-center space-x-3">
                <div class="w-2 h-2 bg-primary rounded-full"></div>
                <span class="text-text-secondary">{item}</span>
              </li>
            ))}
          </ul>
          <div class="mt-6 text-center">
            <a
              href="#contacto"
              class="inline-flex items-center px-6 py-3 bg-secondary hover:bg-primary text-white font-bold rounded-lg transition-all duration-300 transform hover:scale-105"
            >
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
              </svg>
              Solicitar Kit de Medios
            </a>
          </div>
        </div>

        <div class="bg-background-primary rounded-lg p-8 border border-border">
          <div class="text-center mb-6">
            <div class="w-16 h-16 bg-primary rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-6-3a2 2 0 11-4 0 2 2 0 014 0zm-2 4a5 5 0 00-4.546 2.916A5.986 5.986 0 0010 16a5.986 5.986 0 004.546-2.084A5 5 0 0010 11z" clip-rule="evenodd" />
              </svg>
            </div>
            <h4 class="text-xl font-gaming font-bold text-white mb-2">Contacto para Medios</h4>
            <p class="text-text-secondary">Información de contacto para entrevistas y consultas</p>
          </div>
          <div class="space-y-4">
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-primary rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                  <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                </svg>
              </div>
              <div>
                <div class="text-white font-bold">Email</div>
                <div class="text-text-secondary">ciudadcultural.cl@gmail.com</div>
              </div>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-secondary rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
                </svg>
              </div>
              <div>
                <div class="text-white font-bold">Teléfono</div>
                <div class="text-text-secondary">+56 963047502</div>
              </div>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-primary rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                </svg>
              </div>
              <div>
                <div class="text-white font-bold">Empresa</div>
                <div class="text-text-secondary">Ciudad Cultural Producciones Spa</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    </div>
  </div>
</section> 